<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--javascriptを読み込むタグ-->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/f03fd448b3.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
   <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
            <a class="navbar-brand" href="/"><span>Bookers</span></a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            <div class="navbar-collapse collapse show" id="navbarNavDropdown" style="">
              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                  <li class="fas fa-home nav-link text-light">
                <%= link_to "Home", user_path(current_user), class:"text-white" %>
                  </li>
                  <li class="fas fa-users nav-link text-light">
                <%= link_to "Users", users_path, class:"text-white"%>
                  </li>
                  <li class="fas fa-book-open nav-link text-light">
                    <%= link_to "Books", books_path, class:"text-white" %>
                  </li>
                  <li class="fas fa-sign-out-alt nav-link text-light">
                    <%= link_to "logout", destroy_user_session_path, method: :delete, class:"text-white" %>
                  </li>

              <% else %>

                  <li class="fas fa-home nav-link text-light">
                    <%= link_to "Home", root_path, class:"text-white" %>
                  </li>
                  <li class="fas fa-link  nav-link text-light">
                    <%= link_to "About", home_about_path, class:"text-white" %>
                  </li>
                  <li class="fas fa-user-plus nav-link text-light">
                    <%= link_to "sign up", new_user_registration_path, class:"text-white" %>
                  </li>
                  <li class="fas fa-sign-in-alt nav-link text-light">
                    <%= link_to "login", new_user_session_path, class:"text-white" %>
                  </li>
              <% end %>
              </ul>
            </div>
          </div>
        </nav>
    </header>

    <main>
      
    <p id="notice"></p
    <%= render 'layouts/notifications' %>
    
    <%= yield %>
    

    
    </main>

    <footer>
      <div class="container mt-5">
  	    <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	     </div>
        </div>
      </div>
    </footer>

  </body>
</html>
