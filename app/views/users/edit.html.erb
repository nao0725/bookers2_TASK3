 


<main>
 
   <% if @user.errors.any? %>
   <div class = "text-danger h2">
    <%= @user.errors.count %> errors prohibited this obj from being saved:
  </div>
    <li class = "text-danger ">
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  </li>
  
  <div class="container">
    <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

     <%= form_with model: @user, local:true do |f| %>

      <label for="user_name">Name</label>
       <%= f.text_field :name, class: "form-control name" %>

       <label for="user_image">Image</label>
       <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>

       <label for="user_introduction">Introduction</label>
       <%= f.text_area :introduction ,class: "form-control introduction" %>

        <%= f.submit "Update User", class: "btn btn-secondary bg-secondary text-white" %>

      <% end %>
      </div>
     </div>
  </div>
</main>



